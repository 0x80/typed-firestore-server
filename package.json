{
  "name": "@typed-firestore/server",
  "version": "2.0.0",
  "description": "Elegant, typed abstractions for Firestore in server environments",
  "repository": {
    "type": "git",
    "url": "https://github.com/0x80/typed-firestore-server"
  },
  "keywords": [
    "firebase-admin",
    "firebase",
    "firebase",
    "firestore",
    "server",
    "typed-firestore",
    "typed",
    "typescript"
  ],
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./functions": {
      "types": "./dist/functions/index.d.ts",
      "default": "./dist/functions/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "build": "tsup-node && tsc --emitDeclarationOnly && tsc-alias --verbose",
    "clean": "del-cli dist tsconfig.tsbuildinfo",
    "test": "echo \"No test specified\"",
    "prepare": "pnpm clean && pnpm type-check && pnpm build",
    "prettier:format": "prettier --write .",
    "prettier:check": "prettier --check ."
  },
  "author": "Thijs Koerselman",
  "license": "Apache-2.0",
  "dependencies": {
    "process-in-chunks": "1.0.0-1"
  },
  "devDependencies": {
    "@codecompose/typescript-config": "^1.2.0",
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.7",
    "del-cli": "^6.0.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "prettier-plugin-jsdoc": "^1.3.2",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "peerDependencies": {
    "firebase-admin": ">=12.0",
    "firebase-functions": ">=5.0"
  },
  "peerDependenciesMeta": {
    "firebase-admin": {
      "optional": true
    },
    "firebase-functions": {
      "optional": true
    }
  }
}
