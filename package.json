{
  "name": "@typed-firestore/server",
  "version": "2.3.0",
  "description": "Elegant, typed abstractions for Firestore in server environments",
  "keywords": [
    "firebase",
    "firebase-admin",
    "firestore",
    "server",
    "typed",
    "typed-firestore",
    "typescript"
  ],
  "license": "Apache-2.0",
  "author": "Thijs Koerselman",
  "repository": {
    "type": "git",
    "url": "https://github.com/0x80/typed-firestore-server"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./functions": {
      "types": "./dist/functions/index.d.mts",
      "default": "./dist/functions/index.mjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "check-lint": "oxlint -c .oxlintrc.json --import-plugin --type-aware",
    "check-types": "tsc --noEmit",
    "check-format": "oxfmt --check",
    "build": "tsdown",
    "clean": "del-cli dist tsconfig.tsbuildinfo",
    "test": "echo \"No test specified\"",
    "prepare": "pnpm clean && pnpm check-types && pnpm build",
    "format": "oxfmt"
  },
  "dependencies": {
    "process-in-chunks": "1.2.1"
  },
  "devDependencies": {
    "@codecompose/typescript-config": "^2.3.0",
    "@types/node": "^25.2.3",
    "del-cli": "^7.0.0",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "oxlint-tsgolint": "^0.14.0",
    "tsdown": "^0.20.3",
    "typescript": "6.0.0-beta"
  },
  "peerDependencies": {
    "firebase-admin": ">=12.0",
    "firebase-functions": ">=5.0"
  },
  "peerDependenciesMeta": {
    "firebase-admin": {
      "optional": true
    },
    "firebase-functions": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af"
}
